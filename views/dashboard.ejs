    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Sidebar tab navigation
            var sidebarLinks = document.querySelectorAll('.sidebar-nav .nav-link');
            if (sidebarLinks) {
                sidebarLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        sidebarLinks.forEach(l => l.classList.remove('active'));
                        this.classList.add('active');
                        const tab = this.dataset.tab;
                        document.querySelectorAll('.tab-section').forEach(sec => sec.classList.remove('active'));
                        if (tab) {
                            var section = document.getElementById('section-' + tab);
                            if (section) section.classList.add('active');
                        }
                    });
                });
            }

            // Business selector change
            var businessSelector = document.getElementById('businessSelector');
            if (businessSelector) {
                businessSelector.addEventListener('change', function() {
                    window.location.href = '/dashboard/' + this.value;
                });
            }

            // Ensure logout link triggers a full page reload
            var logoutLink = document.querySelector('a[href="/logout"]');
            if (logoutLink) {
                logoutLink.addEventListener('click', function(e) {
                    e.preventDefault();
                    window.location = '/logout';
                });
            }

            // Copy widget code
            var copyWidgetCodeBtn = document.getElementById('copyWidgetCodeBtn');
            var widgetEmbedCode = document.getElementById('widgetEmbedCode');
            var copyWidgetCodeMsg = document.getElementById('copyWidgetCodeMsg');
            if (copyWidgetCodeBtn && widgetEmbedCode && copyWidgetCodeMsg) {
                copyWidgetCodeBtn.addEventListener('click', function() {
                    widgetEmbedCode.select();
                    widgetEmbedCode.setSelectionRange(0, 99999); // For mobile
                    document.execCommand('copy');
                    copyWidgetCodeMsg.style.display = 'inline';
                    setTimeout(() => { copyWidgetCodeMsg.style.display = 'none'; }, 1200);
                });
            }

            // Train Bot modal logic
            var currentUserId = "<%= typeof userId !== 'undefined' ? userId : '' %>";
            var confirmTrainBotBtn = document.getElementById('confirmTrainBotBtn');
            var trainBotError = document.getElementById('trainBotError');
            if (confirmTrainBotBtn && trainBotError) {
                confirmTrainBotBtn.addEventListener('click', function() {
                    trainBotError.classList.add('d-none');
                    confirmTrainBotBtn.disabled = true;
                    confirmTrainBotBtn.textContent = 'Training...';
                    fetch(`/api/business/<%= selectedBusiness.id %>/train-bot`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ userId: currentUserId })
                    })
                    .then(res => res.json())
                    .then(data => {
                        confirmTrainBotBtn.disabled = false;
                        confirmTrainBotBtn.textContent = 'Train Bot';
                        if (data.success) {
                            var modal = bootstrap.Modal.getInstance(document.getElementById('trainBotModal'));
                            if (modal) modal.hide();
                            alert('Bot training started!');
                            if (data.lastTrained) {
                                var botLastTrained = document.getElementById('botLastTrained');
                                if (botLastTrained) {
                                    botLastTrained.textContent = 'Bot last trained: ' + new Date(data.lastTrained).toLocaleString();
                                    botLastTrained.dataset.timestamp = data.lastTrained;
                                }
                            }
                        } else {
                            trainBotError.textContent = 'Failed to train bot: ' + (data.error || 'Unknown error');
                            trainBotError.classList.remove('d-none');
                        }
                    })
                    .catch(() => {
                        confirmTrainBotBtn.disabled = false;
                        confirmTrainBotBtn.textContent = 'Train Bot';
                        trainBotError.textContent = 'Failed to train bot. Network or server error.';
                        trainBotError.classList.remove('d-none');
                    });
                });
            }

            // Bot last trained display
            var botLastTrained = document.getElementById('botLastTrained');
            if (botLastTrained) {
                var ts = botLastTrained.dataset.timestamp;
                if (ts) {
                    var utcString = ts.replace(' ', 'T') + 'Z';
                    var date = new Date(utcString);
                    botLastTrained.textContent = 'Bot last trained: ' + date.toLocaleString();
                } else {
                    botLastTrained.textContent = 'Not trained yet';
                }
            }
        });
